<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#161734"
    app:layout_goneMarginBottom="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#161734"
        android:orientation="vertical"
        android:paddingTop="20dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/source_image_victim_item"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:src="@drawable/user" />

            <TextView
                android:id="@+id/source_name_victim_item"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_gravity="top|center|left"
                android:layout_marginLeft="90dp"
                android:layout_marginTop="8dp"
                android:textColor="@color/white"
                android:textSize="@dimen/_12sdp"
                android:textStyle="bold"

                />

            <TextView
                android:id="@+id/post_time_victim_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center|left"
                android:layout_marginLeft="90dp"
                android:layout_marginBottom="20dp"
                android:textColor="#CDFFFFFF"
                android:textSize="@dimen/_10sdp"

                />
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/victim_image_victim_item"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:scaleType="centerCrop" />


            <TextView
                android:id="@+id/victim_name_victim_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginTop="@dimen/_3sdp"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:textColor="@color/white"
                android:textSize="@dimen/_12sdp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/victim_description_victim_item"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="left"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:textColor="@color/white"
                android:textSize="@dimen/_10sdp"
                />

        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp">

            <TextView
                android:id="@+id/details_btn_victim_item"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:layout_marginLeft="200dp"
                android:layout_marginRight="20dp"
                android:text="@string/details"
                android:padding="5dp"
                android:textColor="@color/orange"
                android:textSize="@dimen/_18sdp" />

        </FrameLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>